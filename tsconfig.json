{
  "compilerOptions": {
    "target": "ES6",                          // Modern JS features
    "lib": ["dom", "es6", "es2015"],          // DOM & JS runtime support
    "types": ["cypress","cypress-real-events"],                     // Cypress types globally available
    "module": "ESNext",                       // Supports ES Modules
    "moduleResolution": "Node",
    "esModuleInterop": true,                  // Enables `import x from '...'`
    "allowSyntheticDefaultImports": true,     // Allows importing without `.default`
    "resolveJsonModule": true,                // Allows importing JSON files
    "noEmit": true,                           // Don't generate JS files
    "strict": true,                           // Enable strict type-checking
    "skipLibCheck": true,                      // Skip type checks on node_modules
  },
  "include": [
    "cypress/**/*.ts",                        // All Cypress tests & pages
    "cypress.config.ts"                       // Include the Cypress config
  ],
  "exclude": [
    "node_modules"
  ],
  
}
